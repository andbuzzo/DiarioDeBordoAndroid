<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.d3h.diariodebordo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activitys.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activitys.MainActivityAdmin"
            android:label="@string/title_activity_main_admin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activitys.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activitys.NovoActivity"
            android:parentActivityName=".activitys.MainActivity"
            android:label="Cadastrar novo item">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.d3h.diariodebordo.activitys.MainActivity" />
        </activity>
        <activity android:name=".activitys.InformacoesActivity"
            android:parentActivityName=".activitys.MainActivity"
            android:label="Informações do item">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.d3h.diariodebordo.activitys.MainActivity" />
        </activity>
        <activity android:name=".activitys.PesquisarActivity"
            android:parentActivityName=".activitys.MainActivity"
            android:label="Pesquisa">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.d3h.diariodebordo.activitys.MainActivity" />
        </activity>
        <activity android:name=".activitys.MeusItemsActivity"
            android:parentActivityName=".activitys.MainActivity"
            android:label="Meus itens">
            <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.d3h.diariodebordo.activitys.MainActivity" />
        </activity>
    </application>

</manifest>